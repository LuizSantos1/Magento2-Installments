<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:DataObject/etc/fieldset.xsd">
    <scope id="global">
        <fieldset id="sales_convert_quote">
            <field name="gabrielqs_installments_qty">
                <aspect name="to_order" />
            </field>
            <field name="gabrielqs_installments_interest_amount">
                <aspect name="to_order" />
            </field>
            <field name="base_gabrielqs_installments_interest_amount">
                <aspect name="to_order" />
            </field>
            <field name="gabrielqs_installments_interest_rate">
                <aspect name="to_order" />
            </field>
        </fieldset>

        <fieldset id="sales_convert_order">
            <field name="gabrielqs_installments_interest_amount">
                <aspect name="to_invoice" />
                <aspect name="to_shipment" />
            </field>
            <field name="base_gabrielqs_installments_interest_amount">
                <aspect name="to_invoice" />
                <aspect name="to_shipment" />
            </field>
        </fieldset>
    </scope>
</config>